<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.uga.cs.mobile_dev_final_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mobile_Dev_Final_Project">
        <activity
            android:name=".ConfirmationPageActivity"
            android:screenOrientation="fullSensor"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".RiderOptionsPage"
            android:screenOrientation="fullSensor"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".DriverOptionsPage"
            android:screenOrientation="fullSensor"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".Home_Page"
            android:screenOrientation="fullSensor"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".UserProfileActivity"
            android:screenOrientation="fullSensor"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="fullSensor"
            android:exported="false"
            android:windowSoftInputMode="stateHidden|adjustPan"/>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="fullSensor"
            android:exported="true"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>