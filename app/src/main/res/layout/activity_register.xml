<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    tools:context=".RegisterActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toTopOf="@+id/new_fullname_prompt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/ridesharingapp" />

    <TextView
        android:id="@+id/new_fullname_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_name"
        app:layout_constraintBottom_toTopOf="@+id/new_fullname_input"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/new_fullname_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/new_email_prompt"
        app:layout_constraintTop_toBottomOf="@+id/new_fullname_prompt" />

    <TextView
        android:id="@+id/new_email_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email_text"
        app:layout_constraintBottom_toTopOf="@+id/new_email_input"
        app:layout_constraintTop_toBottomOf="@+id/new_fullname_input" />

    <EditText
        android:id="@+id/new_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/new_gender_prompt"
        app:layout_constraintTop_toBottomOf="@+id/new_email_prompt" />

    <TextView
        android:id="@+id/new_gender_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gender"
        app:layout_constraintBottom_toTopOf="@+id/new_gender_input"
        app:layout_constraintTop_toBottomOf="@+id/new_email_input"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/new_gender_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/new_password_prompt"
        app:layout_constraintTop_toBottomOf="@+id/new_gender_prompt"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/new_password_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_text"
        app:layout_constraintBottom_toTopOf="@+id/new_password_input"
        app:layout_constraintTop_toBottomOf="@+id/new_gender_input"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/new_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/button_register_user"
        app:layout_constraintTop_toBottomOf="@+id/new_password_prompt"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_register_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="REGISTER USER"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_input"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>